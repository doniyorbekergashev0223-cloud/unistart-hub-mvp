generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String
  action    String
  ipAddress String?
  userAgent String?
  metadata  String?
  createdAt DateTime @default(now())
}

model Organization {
  id        String   @id @default(uuid())
  name      String
  slug      String?  @unique
  logoUrl   String?
  createdAt DateTime @default(now())
  users     User[]
}

model User {
  id             String         @id @default(cuid())
  name           String
  email          String         @unique
  passwordHash   String
  avatarUrl      String?
  role           UserRole       @default(user)
  organizationId String?
  createdAt      DateTime       @default(now())
  organization   Organization?  @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  projects       Project[]

  notifications Notification[]
  passwordResets PasswordReset[]

  @@index([organizationId])
}

model Project {
  id          String           @id @default(cuid())
  title       String
  description String
  contact     String
  status      ProjectStatus    @default(JARAYONDA)
  fileUrl     String?
  userId      String
  createdAt   DateTime         @default(now())
  updatedAt   DateTime @updatedAt
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments    ProjectComment[]

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model ProjectComment {
  id         String   @id @default(cuid())
  content    String
  authorRole UserRole
  projectId  String
  createdAt  DateTime @default(now())
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([createdAt])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model InviteCode {
  id        String    @id @default(cuid())
  code      String    @unique
  role      UserRole
  isActive  Boolean   @default(true)
  expiresAt DateTime?
  createdAt DateTime  @default(now())

  @@index([code])
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@index([expiresAt])
}

enum UserRole {
  user
  admin
  expert
}

enum ProjectStatus {
  QABUL_QILINDI @map("Qabul qilindi")
  JARAYONDA     @map("Jarayonda")
  RAD_ETILDI    @map("Rad etildi")
}
